{
    "version": 3,
    "configurePresets": [
        {
            "name": "vcpkg",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "github",
            "description": "Configuration preset for GitHub Actions",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "debug",
            "description": "Debug configuration preset",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "inherits": "vcpkg"
        }
    ],
    "buildPresets": [
        {
            "name": "vcpkg",
            "description": "Build preset for vcpkg",
            "configurePreset": "vcpkg",
            "targets": [ "all" ]
        },
        {
            "name": "github",
            "description": "Build preset for GitHub Actions",
            "configurePreset": "github",
            "targets": ["all"]
        },
        {
            "name": "debug",
            "description": "Debug build preset",
            "configurePreset": "debug",
            "targets": ["PlexRichPresence"]
        }
    ],
    "testPresets": [
        {
            "name": "github",
            "description": "Test preset for GitHub Actions",
            "configurePreset": "github"
        }
    ]
}
